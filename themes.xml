<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Основная тема приложения -->
    <style name="Theme.AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Настройки для статуса и навигации -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_700</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/purple_700</item>
    </style>

    <!-- Тема MaksMarket -->
    <style name="Theme.MaksMarket" parent="Theme.AppTheme">
        <!-- Можно переопределить цвета здесь, если нужно -->
        <!-- Например: -->
        <!-- <item name="colorPrimary">@color/teal_700</item> -->
    </style>

</resources>
